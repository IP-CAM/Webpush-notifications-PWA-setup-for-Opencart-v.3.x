{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header container-fluid">
    <div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li>
          <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if errors.error_warning %}
    <div class="alert alert-danger alert-dismissible">
      <i class="fa fa-exclamation-circle"></i>
      {{ errors.error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} {% if success %}
    <div class="alert alert-success alert-dismissible">
      <i class="fa fa-check-circle"></i>
      {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-header">
        {{ nav }}
      </div>
      <div class="panel-body">
        <form
          action="{{ action }}"
          method="post"
          enctype="multipart/form-data"
          id="form-module"
          class="form-horizontal"
        >
          <div class="form-group col-sm-6">
            <label class="control-label">
              {{ entry_events_for_admin }}
            </label>
            <div class="well well-sm" style="height: 150px; overflow: auto">
              {% for event in admin_events %}
              <div class="checkbox">
                <label>
                  <input
                    type="checkbox"
                    name="events_for_admin[]"
                    value="{{ event.value }}"
                    {%
                    if
                    event.value
                    in
                    events_for_admin
                    %}
                    checked="checked"
                    {%
                    endif
                    %}
                  />
                  {{ event.label }}
                </label>
              </div>
              {% endfor %}
            </div>
          </div>

          <div class="form-group col-sm-6">
            <label class="control-label">
              {{ entry_events_for_customer }}
            </label>
            <div class="well well-sm" style="height: 150px; overflow: auto">
              {% for event in customer_events %}
              <div class="checkbox">
                <label>
                  <input
                    type="checkbox"
                    name="events_for_customer[]"
                    value="{{ event.value }}"
                    {%
                    if
                    event.value
                    in
                    events_for_customer
                    %}
                    checked="checked"
                    {%
                    endif
                    %}
                  />
                  {{ event.label }}
                </label>
              </div>
              {% endfor %}
            </div>
          </div>

          <div
            class="pull-right col-md-4 col-sm-6 col-xs-8"
            style="padding: 4rem 0 0"
          >
            <button
              type="submit"
              form="form-module"
              class="btn btn-primary btn-lg btn-block"
            >
              <i class="fa fa-save"></i>
              {{ button_save }}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}

<script>
  $(document).ready(function () {});
</script>
